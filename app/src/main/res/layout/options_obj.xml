<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignTop="@+id/name"
        android:layout_marginTop="36dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/type"
        android:layout_alignLeft="@+id/type"
        android:layout_alignTop="@+id/type"
        android:layout_marginTop="36dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/height"
        android:layout_alignLeft="@+id/height"
        android:layout_alignTop="@+id/height"
        android:layout_marginTop="36dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/length"
        android:layout_alignLeft="@+id/length"
        android:layout_alignTop="@+id/length"
        android:layout_marginTop="36dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/incline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="36dp"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/incline"
        android:layout_alignLeft="@+id/incline"
        android:layout_alignTop="@+id/incline"
        android:layout_marginTop="36dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/rigidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/temperature"
        android:layout_alignLeft="@+id/temperature"
        android:layout_alignTop="@+id/temperature"
        android:layout_marginTop="36dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/massage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rigidity"
        android:layout_alignLeft="@+id/rigidity"
        android:layout_alignTop="@+id/rigidity"
        android:layout_marginTop="36dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/delete_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_alignTop="@+id/width"
        android:layout_alignStart="@+id/width"
        android:layout_alignLeft="@+id/width"
        android:background="@color/colorDanger"
        android:text="@string/action_delete"
        android:textColor="@color/colorTextWhite"
        android:textStyle="bold" />

</RelativeLayout>